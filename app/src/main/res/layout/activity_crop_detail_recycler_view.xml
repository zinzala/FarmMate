<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:padding="16dp"
    android:background="@drawable/rounded_corners"
    tools:context=".ActivityCropDetailRecyclerView">

    <ImageView
        android:id="@+id/imageCropDetail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/cropp"
        android:background="@drawable/rounded_corners"
        android:clipToOutline="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/imageCropDetail"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/textCropNameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wheat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textCropDescriptionDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crop Description"
            android:textSize="15sp"
            android:textColor="#FFFFFF"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageCropDetai"
        android:layout_width="25dp"
        android:layout_marginTop="14dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="310dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/infof"
        android:background="@drawable/rounded_corners"
        android:clipToOutline="true" />

</RelativeLayout>